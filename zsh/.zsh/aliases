# Interactive coreutils
alias cp='cp -i'
alias mv='mv -i'

# Colored coreutils
alias ls='ls -AGFh --color=auto'
alias grep='grep --color=auto'

# Misc. re-aliased stuff
alias cat='cat -v'
alias mkdir='mkdir -p'
alias pacman='sudo pacman'
alias wget='wget -c'
alias dirs='dirs -v'
alias diff='colordiff'
alias youtube-dl='youtube-dl -o "%(title)s.%(ext)s"'

# Shortcuts for common commands
alias c='clear'
alias x='exit'
alias ll='ls -AGFhl --color=auto'
alias lsg='ls -AGFh --color=auto | grep --color=auto -i'
alias copy='xsel -ib'
alias pacu='sudo pacman -U'
alias ext='aunpack'
alias duh='du -h | sort -hr | less'
alias duhs='du -hs | sort -hr | less'
alias mkpkg='makepkg -cs'
alias gpom='git push origin master'
