# Interactive coreutils
alias cp='cp -i'
alias mv='mv -i'

# Colored coreutils
alias ls='ls -Ah --color=auto'
alias grep='grep --color=auto'

# Misc. re-aliased stuff
alias cat='cat -v'
alias mkdir='mkdir -p'
alias pacman='sudo pacman'
alias wget='wget -c'

# Shortcuts for common commands
alias c='clear'
alias x='exit'
alias lsg='ls -Ah --color=auto | grep --color=auto -i'
alias copy='xsel -ib'
alias pacu='sudo pacman -U'
